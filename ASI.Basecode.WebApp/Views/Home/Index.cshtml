@{
    Layout = null;
    ViewData["Title"] = "MarkUP — Track Student Performance with Precision";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/landing-page.css" />
</head>
<body class="lp">
    <!-- NAVBAR -->
    <header class="nav">
        <div class="container">
            <a class="brand" asp-controller="Home" asp-action="Landing" aria-label="MarkUP Home">
                <img src="~/img/MarkUPLogo.png" alt="MarkUP logo" />
                <span>MarkUP</span>
            </a>

            <nav aria-label="Primary">
                <a href="#features" class="nav-link">Features</a>
                <a href="#about" class="nav-link">About</a>
                <a href="#contact" class="nav-link">Contact</a>
            </nav>

            <button class="nav-toggle" aria-label="Open navigation" aria-expanded="false">
                <i class="bi bi-list"></i>
            </button>
        </div>
    </header>

    <!-- HERO -->
    <section class="hero" id="hero">
        <div class="container grid-2">
            <div class="hero-copy reveal-up">
                <div class="eyebrow">Analytics • Insights • Precision</div>
                <h1>Track Student <span class="grad">Performance</span> with Precision</h1>
                <p class="lead">
                    Comprehensive analytics and insights to help students, teachers, and administrators
                    make data-driven decisions for academic success.
                </p>

                <div class="chip-row">
                    <span class="chip"><i class="bi bi-activity"></i> Real-time Analytics</span>
                    <span class="chip"><i class="bi bi-shield-check"></i> Secure Platform</span>
                    <span class="chip"><i class="bi bi-plug"></i> Easy Integration</span>
                </div>
            </div>

            <div class="hero-visual reveal-up" aria-hidden="true">
                <div class="dash-card" id="tilt">
                    <div class="dash-head">
                        <span class="dot"></span>
                        <span class="title">Performance Dashboard</span>
                        <i class="bi bi-bar-chart-line"></i>
                    </div>
                    <ul class="dash-list">
                        <li>Mathematics <div class="bar"><span style="--v:82%"></span></div></li>
                        <li>Science <div class="bar"><span style="--v:64%"></span></div></li>
                        <li>English <div class="bar"><span style="--v:91%"></span></div></li>
                    </ul>

                    <div class="micro-cards">
                        <div class="micro"><div class="big">1.24</div><div class="cap">Best GWA</div></div>
                        <div class="micro"><div class="big">+12%</div><div class="cap">This term</div></div>
                        <div class="micro"><div class="big">98</div><div class="cap">Submissions</div></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- PORTALS -->
    <section id="portals" class="portals">
        <div class="container">
            <h2 class="center reveal-up section-title">Choose Your Portal</h2>
            <p class="sub center reveal-up">Access your personalized dashboard based on your role in the educational ecosystem</p>

            <div class="card-grid">
                <!-- Student -->
                <article class="portal-card reveal-up">
                    <div class="icon-wrap icon-student"><i class="bi bi-mortarboard-fill"></i></div>
                    <h3>Student Portal</h3>
                    <p>Track your academic progress, view grades, assignments, and get personalized insights to improve your performance.</p>
                    <ul class="mini">
                        <li><i class="bi bi-check-circle-fill"></i> Performance Analytics</li>
                        <li><i class="bi bi-check-circle-fill"></i> Assignment Tracking</li>
                        <li><i class="bi bi-check-circle-fill"></i> Achievement Badges</li>
                    </ul>
                    <div class="actions">
                        <a class="btn solid ripple btn-student" asp-controller="Login" asp-action="StudentLogin">
                            Student Login <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </article>

                <!-- Teacher -->
                <article class="portal-card reveal-up">
                    <div class="icon-wrap icon-teacher"><i class="bi bi-easel2-fill"></i></div>
                    <h3>Teacher Portal</h3>
                    <p>Monitor student progress, manage assignments, generate reports, and provide targeted feedback to enhance learning outcomes.</p>
                    <ul class="mini">
                        <li><i class="bi bi-check-circle-fill"></i> Class Management</li>
                        <li><i class="bi bi-check-circle-fill"></i> Report Generation</li>
                        <li><i class="bi bi-check-circle-fill"></i> Student Feedback</li>
                    </ul>
                    <div class="actions">
                        <a class="btn solid ripple btn-teacher" asp-controller="Login" asp-action="TeacherLogin">
                            Teacher Login <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </article>

                <!-- Admin -->
                <article class="portal-card reveal-up">
                   <div class="icon-wrap icon-admin"><i class="bi bi-gear-fill"></i></div>
                    <h3>Admin Portal</h3>
                    <p>Oversee institutional performance, manage users, configure system settings, and access comprehensive analytics dashboards.</p>
                    <ul class="mini">
                        <li><i class="bi bi-check-circle-fill"></i> System Management</li>
                        <li><i class="bi bi-check-circle-fill"></i> Institution Analytics</li>
                        <li><i class="bi bi-check-circle-fill"></i> User Administration</li>
                    </ul>
                    <div class="actions">
                        <a class="btn solid ripple btn-admin" asp-controller="Login" asp-action="AdminLogin">
                            Admin Login <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- WHY -->
    <section id="features" class="why">
        <div class="container">
            <h2 class="center reveal-up section-title">Why Choose MarkUP?</h2>
            <p class="sub center reveal-up">Powerful features designed to transform educational performance tracking and analysis</p>

            <div class="why-grid">
                <div class="why-item reveal-up">
                    <div class="why-icon"><i class="bi bi-lightning-charge-fill"></i></div>
                    <h4>Real-time Updates</h4>
                    <p>Get instant notifications and live performance updates.</p>
                </div>
                <div class="why-item reveal-up">
                    <div class="why-icon"><i class="bi bi-phone-fill"></i></div>
                    <h4>Mobile Friendly</h4>
                    <p>Access your dashboard anywhere, anytime on any device.</p>
                </div>
                <div class="why-item reveal-up">
                    <div class="why-icon"><i class="bi bi-shield-lock-fill"></i></div>
                    <h4>Secure &amp; Private</h4>
                    <p>Enterprise-grade security protecting your data.</p>
                </div>
                <div class="why-item reveal-up">
                    <div class="why-icon"><i class="bi bi-puzzle-fill"></i></div>
                    <h4>Easy Integration</h4>
                    <p>Seamlessly integrate with existing school systems.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer id="about" class="site-footer">
        <div class="container footer-grid">
            <div>
                <div class="footer-brand">
                    <img src="~/img/MarkUPLogo.png" alt="MarkUP logo" />
                    <h4>MarkUP</h4>
                </div>
                <p>Empowering education through intelligent performance tracking and analytics.</p>
            </div>
            <div>
                <h6>Platform</h6>
                <a asp-controller="Login" asp-action="StudentLogin">Student Portal</a>
                <a asp-controller="Login" asp-action="TeacherLogin">Teacher Portal</a>
                <a asp-controller="Login" asp-action="AdminLogin">Admin Portal</a>
            </div>
            <div>
                <h6>Support</h6>
                <a href="#">Help Center</a>
                <a href="#">Documentation</a>
                <a href="#">Status</a>
            </div>
            <div id="contact">
                <h6>Connect</h6>
                <div class="socials">
                    <a href="#" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" aria-label="Github"><i class="bi bi-github"></i></a>
                </div>
                <p class="tiny">© @DateTime.Now.Year MarkUP</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Mobile nav
        const toggle = document.querySelector('.nav-toggle');
        const header = document.querySelector('.nav');
        toggle?.addEventListener('click', () => {
            const open = header.classList.toggle('open');
            toggle.setAttribute('aria-expanded', String(open));
        });

        // Slide-in + fade-in on scroll
        const io = new IntersectionObserver((entries) => {
            entries.forEach(e => { if (e.isIntersecting) e.target.classList.add('in-view'); });
        }, { threshold: 0.15, rootMargin: "0px 0px -20px 0px" });
        document.querySelectorAll('.reveal-up').forEach(el => io.observe(el));

        // Confetti
        function burst(x, y) {
            const n = 14;
            for (let i = 0; i < n; i++) {
                const s = document.createElement('span');
                s.className = 'confetti';
                s.style.left = x + 'px';
                s.style.top = y + 'px';
                s.style.setProperty('--rx', (Math.random()*2-1).toFixed(2));
                s.style.setProperty('--ry', (Math.random()*-1-0.2).toFixed(2));
                s.style.setProperty('--t', (600 + Math.random()*500).toFixed(0) + 'ms');
                document.body.appendChild(s);
                setTimeout(() => s.remove(), 900);
            }
        }
        document.querySelectorAll('.btn.ripple').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const r = btn.getBoundingClientRect();
                const x = r.left + e.offsetX, y = r.top + e.offsetY;
                burst(x, y);
            });
        });

        // Tilt
        const tilt = document.getElementById('tilt');
        tilt?.addEventListener('mousemove', (e) => {
            const r = tilt.getBoundingClientRect();
            const rx = ((e.clientY - r.top) / r.height - 0.5) * -8;
            const ry = ((e.clientX - r.left) / r.width - 0.5) * 10;
            tilt.style.transform = `rotateX(${rx}deg) rotateY(${ry}deg) translateZ(0)`;
        });
        tilt?.addEventListener('mouseleave', () => { tilt.style.transform = ''; });
    </script>
</body>
</html>
