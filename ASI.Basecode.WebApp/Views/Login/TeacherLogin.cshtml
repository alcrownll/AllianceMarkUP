@model ASI.Basecode.WebApp.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/Layouts/_LayoutLogin.cshtml";
    ViewData["Title"] = "Teacher Login";
}

@section styles {
    <link rel="stylesheet" href="~/css/user-login.css" />
}

<div class="login-container">
    <div class="login-card">
        <div class="login-form">
            <h2 class="title">Teacher Portal</h2>

            <form asp-controller="Account" asp-action="TeacherLogin" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="IdNumber">ID Number</label>
                    <input asp-for="IdNumber" id="idNumber" class="form-control" placeholder="Enter ID Number" />
                    <span asp-validation-for="IdNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-options">
                    <label>
                        <input asp-for="RememberMe" type="checkbox" /> Remember Me
                    </label>
                    <a href="#">Forgot Password?</a>
                </div>

                <button type="submit" class="btn-login">Login</button>
            </form>

            @if (TempData["ErrorMessage"] != null)
            {
                <p class="error-message">@TempData["ErrorMessage"]</p>
            }
        </div>

        <div class="login-illustration">
            <img src="~/img/teacher-illustration.svg" alt="Teacher Illustration" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
