@{
    Layout = "~/Views/Shared/Layouts/_LayoutLogin.cshtml";
    ViewData["Title"] = "Invalid Link";
}
<section class="auth-wall">
    <div class="glass-stage" style="grid-template-columns:1fr;">
        <div class="pane pane-form" style="max-width:520px;margin:0 auto;text-align:center;">
            <h2 class="portal-title">Link Expired or Invalid</h2>
            <p>Please request a new password reset link from the login page.</p>
            <a class="btn-primary" href="@Url.Action("StudentLogin", "Login")" style="display:inline-flex;margin-top:10px; width:auto; padding:0 18px;">Back to Login</a>
        </div>
    </div>
</section>
