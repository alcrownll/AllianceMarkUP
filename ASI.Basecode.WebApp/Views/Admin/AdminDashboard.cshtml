@model ASI.Basecode.WebApp.Models.AdminDashboardViewModel
@using System.Text.Json
@using System.Collections.Generic
@using System.Linq
@using ASI.Basecode.Services.ServiceModels
@{
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["PageHeader"] = "Admin Dashboard";

    var selectedTermKey = Model?.YearDetail?.SelectedTermKey ?? string.Empty;

    var initialPayload = new
    {
        summary = Model?.Summary,
        trend = Model?.EnrollmentTrend ?? new List<EnrollmentTrendPointModel>(),
        schoolYears = Model?.SchoolYears ?? new List<string>(),
        selectedSchoolYear = Model?.SelectedSchoolYear,
        selectedTermKey = selectedTermKey,
        detail = Model?.YearDetail,
        programs = Model?.Programs ?? new List<ProgramOptionModel>(),
        selectedProgramId = Model?.SelectedProgramId
    };
}

<link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />

<div class="admin-dashboard" id="admin-dashboard">

    <section class="dashboard-controls glass">
        <div class="filters-title">
            <i class="fa-solid fa-filter" aria-hidden="true"></i>
            <span>Filter</span>
        </div>
        <div class="dashboard-filter-grid">
            <div class="filter-field">
                <label for="programSelector" class="form-label">Program</label>
                <select id="programSelector" class="form-select">
                    <option value="">All Programs</option>
                    @if (Model?.Programs?.Any() == true)
                    {
                        foreach (var program in Model.Programs)
                        {
                            var isSelected = Model?.SelectedProgramId == program.ProgramId;
                            <option value="@program.ProgramId" selected="@(isSelected)">
                                @(string.IsNullOrWhiteSpace(program.ProgramCode) ? program.ProgramName : $"{program.ProgramCode} - {program.ProgramName}")
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="filter-field">
                <label for="yearSelector" class="form-label">Academic Year</label>
                <select id="yearSelector" class="form-select">
                    <option value="">All Years</option>
                    @if (Model?.SchoolYears?.Any() == true)
                    {
                        foreach (var year in Model.SchoolYears)
                        {
                            var isSelectedYear = string.Equals(Model?.SelectedSchoolYear, year, StringComparison.OrdinalIgnoreCase);
                            <option value="@year" selected="@(isSelectedYear)">@year</option>
                        }
                    }
                </select>
            </div>

            <div class="filter-field">
                <label for="termSelector" class="form-label">Semester</label>
                <select id="termSelector" class="form-select">
                    <option value="">Whole Year</option>
                </select>
            </div>
        </div>
    </section>

    <section class="kpi-grid">  
        <article class="kpi-card glass">
            <div class="kpi-icon students">
                <i class="fa-solid fa-user-graduate"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Total Students</span>
                <span class="kpi-value" data-kpi="students">@((Model?.Summary?.TotalStudents ?? 0).ToString("N0"))</span>
            </div>
        </article>
        <article class="kpi-card glass">
            <div class="kpi-icon teachers">
                <i class="fa-solid fa-chalkboard-user"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Teachers</span>
                <span class="kpi-value" data-kpi="teachers">@((Model?.Summary?.TotalTeachers ?? 0).ToString("N0"))</span>
            </div>
        </article>
        <article class="kpi-card glass">
            <div class="kpi-icon courses">
                <i class="fa-solid fa-book-open"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Courses</span>
                <span class="kpi-value" data-kpi="courses">@((Model?.Summary?.ActiveCourses ?? 0).ToString("N0"))</span>
            </div>
        </article>
    </section>

    <section class="panel glass panel-xl">
        <div class="panel-header">
            <div>
                <h2>Students Enrolled</h2>
                <span>Number of students per subject</span>
            </div>
            <span class="panel-hint">Hover to reveal totals</span>
        </div>
        <div class="panel-body chart-area">
            <canvas id="enrollmentTrendChart"></canvas>
        </div>
    </section>

    <section class="panel-grid">
        <article class="panel glass">
            <div class="panel-header">
                <div>
                    <h2>Average GPA</h2>
                    <span>Weighted per subject</span>
                </div>
            </div>
            <div class="panel-body chart-area">
                <canvas id="averageGpaChart"></canvas>
            </div>
        </article>
        <article class="panel glass">
            <div class="panel-header">
                <div>
                    <h2>Pass vs Fail Rate</h2>
                    <span>Defines performance success frequency</span>
                </div>
            </div>
            <div class="panel-body chart-area">
                <canvas id="passFailChart"></canvas>
            </div>
        </article>
    </section>
</div>

@section Scripts {
    <script>
        window.AdminDashboardInitial = @Html.Raw(JsonSerializer.Serialize(initialPayload, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.5/dist/chart.umd.min.js" crossorigin="anonymous"></script>
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
}