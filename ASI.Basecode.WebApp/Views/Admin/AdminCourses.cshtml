@{
    ViewData["Title"] = "Program & Courses";
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
    ViewData["PageHeader"] = "Program & Courses";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-courses.css" />
}

<div class="admin-courses-container">
    <div class="card admin-courses-card">
        <div class="card-header bg-white border-0 pt-3 pb-0">
            <div class="d-flex justify-content-between align-items-end gap-3 flex-wrap">

                <!-- Tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active"
                           data-toggle="tab"
                           href="#programs"
                           role="tab">Academic Programs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           data-toggle="tab"
                           href="#courses"
                           role="tab">Courses</a>
                    </li>
                </ul>



                <!-- Actions: Filter first, then Search (UI only) -->
                <div class="d-flex align-items-center gap-2 ms-auto">
                    <button class="btn btn-sm btn-outline-secondary" type="button">Filter</button>
                    <input class="form-control form-control-sm"
                           type="search"
                           placeholder="Search..."
                           aria-label="Search"
                           style="min-width:240px" />
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="tab-content" id="catalogTabsContent">
                <!-- Academic Programs -->
                <div class="tab-pane fade" id="programs" role="tabpanel" aria-labelledby="programs-tab">
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:20%;">Program Code</th>
                                    <th>Program Name</th>
                                    <th style="width:18%;">Department</th>
                                    <th style="width:12%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>BSCS</td>
                                    <td>BS Computer Science</td>
                                    <td>CCS</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                        <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>BSIS</td>
                                    <td>BS Information Systems</td>
                                    <td>CCS</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                        <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Courses  -->
                <div class="tab-pane fade show active" id="courses" role="tabpanel" aria-labelledby="courses-tab">
                    <div class="table-responsive">

                        <div class="mt-3 d-flex justify-content-end">
                            <button class="btn btn-primary rounded-pill px-4"
                                    data-toggle="modal"
                                    data-target="#addCourseModal">
                                <span class="mr-2">+</span> Add Course
                            </button>
                        </div>

                        <table class="table table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:14%;">Course Code</th>
                                    <th>Title</th>
                                    <th style="width:12%;">Units</th>
                                    <th style="width:14%;">Program</th>
                                    <th style="width:12%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>IT101</td>
                                    <td>Introduction to Programming</td>
                                    <td>3</td>
                                    <td>BSCS</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                        <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>IS201</td>
                                    <td>Systems Analysis</td>
                                    <td>3</td>
                                    <td>BSIS</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary">View</button>
                                        <button class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div> <!-- /Courses -->
                <!-- Add Course Modal -->
                <div class="modal fade" id="addCourseModal" tabindex="-1" role="dialog" aria-labelledby="addCourseLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addCourseLabel">Add Course</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                <!-- Simple placeholder form (no functionality yet) -->
                                <div class="form-group">
                                    <label for="courseCode">Course Code</label>
                                    <input type="text" class="form-control" id="courseCode" placeholder="e.g., IT101">
                                </div>
                                <div class="form-group">
                                    <label for="courseTitle">Title</label>
                                    <input type="text" class="form-control" id="courseTitle" placeholder="e.g., Introduction to Programming">
                                </div>
                                <div class="form-group">
                                    <label for="courseUnits">Units</label>
                                    <input type="number" class="form-control" id="courseUnits" placeholder="e.g., 3">
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
