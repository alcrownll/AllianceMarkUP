@model IEnumerable<ASI.Basecode.Data.Models.Course>

@if (Model == null || !Model.Any())
{
    <div class="text-center text-muted py-5">No courses found.</div>
}
else
{
    <div class="table-wrapper">
        <div class="table-responsive no-shadow-table">
            <table class="table align-middle mt-3 mb-0 courses-table">
                <!-- Table columns -->
                <colgroup>
                    <col style="width:120px">   @* Code *@
                    <col>                        @* Description fills remaining *@
                    <col style="width:90px">     @* Lec *@
                    <col style="width:90px">     @* Lab *@
                    <col style="width:90px">     @* Total *@
                    <col style="width:220px">    @* Actions *@
                </colgroup>

                <thead class="table-light">
                    <tr>
                        <th class="text-start">Code</th>
                        <th class="text-start">Description</th>
                        <th class="text-center">Lec</th>
                        <th class="text-center">Lab</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var c in Model)
                    {
                        var lec = c.LecUnits;
                        var lab = c.LabUnits;
                        var total = lec + lab;

                        <tr>
                            <td class="fw-semibold text-uppercase code-cell">@c.CourseCode</td>
                            <td class="text-start">@c.Description</td>
                            <td class="text-center">@lec</td>
                            <td class="text-center">@lab</td>
                            <td class="text-center">@total</td>
                            <td class="text-center">
                                <div class="row-actions">
                                    <button class="btn btn-outline-primary"
                                            data-action="course-edit"
                                            data-course-id="@c.CourseId"
                                            data-course-code="@c.CourseCode"
                                            data-course-description="@c.Description"
                                            data-course-lec-units="@c.LecUnits"
                                            data-course-lab-units="@c.LabUnits">
                                        Edit
                                    </button>

                                    <button class="btn btn-outline-danger btn-course-delete"
                                            data-course-id="@c.CourseId"
                                            data-course-code="@c.CourseCode"
                                            data-course-name="@c.Description">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
