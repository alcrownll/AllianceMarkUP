@using ASI.Basecode.Data.Models
@model AssignedCourse

@{
    var modalId = $"confirmDelete-{Model.AssignedCourseId}";
}

<div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Delete Assigned Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete
                <strong>@Model.EDPCode – @Model.Course?.CourseCode</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>

                <form asp-action="Delete" asp-route-id="@Model.AssignedCourseId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
