@model ASI.Basecode.Services.ServiceModels.StudentProfileViewModel
@{
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
    ViewData["Title"] = "Profile";
    ViewData["PageHeader"] = "Profile";

    var isCreate = (ViewData["IsCreate"] as bool?) == true;
    var postCtrl = (ViewData["PostController"] as string) ?? "AdminAccounts";
    var postAct = (ViewData["PostAction"] as string) ?? "SaveStudent";
}
<link rel="stylesheet" href="~/css/user-profile.css" />

<div class="container my-4">
    <div class="profile-card">
        @if (TempData["ProfileSaved"] is string msg)
        {
            <div class="alert alert-success mb-3">@msg</div>
        }

        @if (!isCreate)
        {
            <p class="meta-info">User ID: <span>@Model.IdNumber</span></p>
            <p class="meta-info">Display Name: <span>@Model.FirstName @Model.LastName</span></p>
        }

        <form asp-action="@postAct" asp-controller="@postCtrl" asp-route-userId="@(isCreate ? null : Model.UserId)"
            method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <input type="hidden" asp-for="UserId" />
            <input type="hidden" name="Role" value="Student" />

            <div class="role-strip p-3 bg-light rounded mb-3 role-block-student">
                <div class="row g-3 uniform-row">
                    <div class="col-md-3">
                        <label class="form-label" asp-for="AdmissionType"></label>
                        <select class="form-select" asp-for="AdmissionType" required>
                            <option value="">-- Select --</option>
                            <option>New</option>
                            <option>Old</option>
                            <option>Transferee</option>
                        </select>
                        <span asp-validation-for="AdmissionType" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label" asp-for="Department"></label>
                        <select class="form-select" asp-for="Department" required>
                            <option value="">-- Select --</option>
                            <option>Arts & Sciences</option>
                            <option>Computer Studies</option>
                            <option>Engineering</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label" asp-for="Program"></label>
                        <select class="form-select" asp-for="Program" required>
                            <option value="">-- Select --</option>
                            <option>Computer Science</option>
                            <option>Information Technology</option>
                            <option>Information Systems</option>
                        </select>
                        <span asp-validation-for="Program" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label" asp-for="YearLevel"></label>
                        <select class="form-select" asp-for="YearLevel" required>
                            <option value="">-- Select --</option>
                            <option>1st Year</option>
                            <option>2nd Year</option>
                            <option>3rd Year</option>
                            <option>4th Year</option>
                        </select>
                        <span asp-validation-for="YearLevel" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 uniform-row mt-2">
                    <div class="col-md-3">
                        <label class="form-label" asp-for="Section"></label>
                        <input class="form-control" asp-for="Section" />
                        <span asp-validation-for="Section" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @await Html.PartialAsync("~/Views/Shared/Partials/Profile.cshtml", Model)

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">@((isCreate) ? "Create" : "Update")</button>
                <a class="btn btn-outline-secondary" asp-controller="AdminAccounts" asp-action="Index"
                    asp-route-tab="students">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const input = document.getElementById('avatarInput');
            const preview = document.getElementById('avatarPreview');
            if (input && preview) {
                preview.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); input.click(); }
                });
                input.addEventListener('change', function (e) {
                    const file = e.target.files && e.target.files[0];
                    if (!file) return;
                    const reader = new FileReader();
                    reader.onload = function (ev) {
                        preview.style.backgroundImage = `url('${ev.target.result}')`;
                        preview.classList.add('has-image');
                    };
                    reader.readAsDataURL(file);
                });
                var url = '@(Model.ProfilePictureUrl ?? "")';
                if (url) {
                    preview.style.backgroundImage = `url('${url}')`;
                    preview.classList.add('has-image');
                }
            }
        })();

        (function () {
            'use strict';
            document.querySelectorAll('.needs-validation').forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}