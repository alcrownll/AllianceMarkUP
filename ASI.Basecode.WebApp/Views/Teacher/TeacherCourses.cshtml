@{
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
    ViewData["Title"] = "Assigned Courses";
    ViewData["PageHeader"] = "Assigned Courses";
}

@section Styles {
    <link rel="stylesheet" href="~/css/teacher-course.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@Html.AntiForgeryToken()

@* Main content area - visible on screen *@
<div class="teacher-courses-container no-print">
    <div class="container-fluid">

        @* ======= Grade View / Grade Entry Tabs ======= *@
        <div class="grade-tab-container">
            <ul class="nav nav-pills" id="gradeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="grade-view-tab" data-bs-toggle="tab" data-bs-target="#grade-view" type="button" role="tab" aria-controls="grade-view" aria-selected="true">
                        <i class="bi bi-table me-1"></i> Grade View
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="grade-entry-tab" data-bs-toggle="tab" data-bs-target="#grade-entry" type="button" role="tab" aria-controls="grade-entry" aria-selected="false">
                        <i class="bi bi-pencil-square me-1"></i> Grade Entry
                    </button>
                </li>
            </ul>
        </div>

        <div class="tab-content" id="gradeTabsContent">
            <div class="tab-pane fade show active" id="grade-view" role="tabpanel" aria-labelledby="grade-view-tab">
                <!-- Grade View -->
                <!-- Filters -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesFilters.cshtml")

                <!-- Student and Grade Table -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesGradeTable.cshtml")
            </div>
            <div class="tab-pane fade" id="grade-entry" role="tabpanel" aria-labelledby="grade-entry-tab">
                <!-- Grade Entry -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesGradeEntry.cshtml")

                <!-- Edit Grades Panel -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesEditPanel.cshtml")

                <!-- Excel Upload Modal -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesExcelUpload.cshtml")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/teacher-courses.js"></script>
    <script>
        // Initialize Bootstrap tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });
        });
    </script>
}
