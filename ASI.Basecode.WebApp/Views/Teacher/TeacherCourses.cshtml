@model List<ASI.Basecode.Services.ServiceModels.TeacherClassScheduleViewModel>
@{
    Layout = "~/Views/Shared/Layouts/_MainLayout.cshtml";
    ViewData["Title"] = "Assigned Courses";
    ViewData["PageHeader"] = "Assigned Courses";
}

@section Styles {
    <link rel="stylesheet" href="~/css/teacher-course.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@Html.AntiForgeryToken()

@* Main content area - visible on screen *@
<div class="teacher-courses-container no-print">
    <div class="container-fluid">

        @* ======= Grade View / Grade Entry Tabs ======= *@
        <div class="grade-tab-container">
            <ul class="nav nav-pills" id="gradeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="grade-view-tab" data-bs-toggle="tab" data-bs-target="#grade-view" type="button" role="tab" aria-controls="grade-view" aria-selected="true">
                        <i class="bi bi-table me-1"></i> Grade View
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="grade-entry-tab" data-bs-toggle="tab" data-bs-target="#grade-entry" type="button" role="tab" aria-controls="grade-entry" aria-selected="false">
                        <i class="bi bi-pencil-square me-1"></i> Grade Entry
                    </button>
                </li>
            </ul>
        </div>

        <div class="tab-content" id="gradeTabsContent">
            <div class="tab-pane fade show active" id="grade-view" role="tabpanel" aria-labelledby="grade-view-tab">
                <!-- Content for Grade View tab -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesFilters.cshtml")

                <!-- Students and Grades Table -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesGradeTable.cshtml")
            </div>
            <div class="tab-pane fade" id="grade-entry" role="tabpanel" aria-labelledby="grade-entry-tab">
                <!-- Content for Grade Entry tab -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3">Class Schedule</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle grade-entry-table">
                                <thead>
                                    <tr>
                                        <th>EDP Code</th>
                                        <th>Subject</th>
                                        <th>Type</th>
                                        <th>Units</th>
                                        <th>Schedule</th>
                                        <th>Room</th>
                                        <th>Section</th>
                                        <th>Course</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var course in Model)
                                        {
                                            <tr>
                                                <td>@course.EDPCode</td>
                                                <td>@course.Subject</td>
                                                <td>@course.Type</td>
                                                <td>@course.Units</td>
                                                <td>@course.DateTime</td>
                                                <td>@course.Room</td>
                                                <td>@course.Section</td>
                                                <td>@course.Course</td>
                                                <td class="text-center">
                                                    <div class="d-inline-flex gap-2">
                                                        <!-- Edit -->
                                                        <button type="button"
                                                                class="icon-btn icon-edit"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="Edit"
                                                                onclick="showEditPanel('@course.EDPCode', '@course.Subject', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </button>

                                                        <!-- Upload -->
                                                        <button type="button"
                                                                class="icon-btn icon-upload"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="Upload Excel Grades"
                                                                onclick="openExcelUploadModal('@course.EDPCode', '@course.Subject', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-upload"></i>
                                                        </button>

                                                        <!-- To PDF -->
                                                        <button type="button"
                                                                class="icon-btn icon-pdf"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="To PDF"
                                                                onclick="printGrades('@course.EDPCode', '@course.Subject', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-file-earmark-text"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center text-muted">No assigned courses found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Edit Grades Panel -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesEditPanel.cshtml")

                <!-- Excel Upload Modal -->
                @await Html.PartialAsync("~/Views/Teacher/Partials/_TeacherCoursesExcelUpload.cshtml")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/teacher-courses.js"></script>
    <script>
        // Initialize Bootstrap tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });
        });
    </script>
}
