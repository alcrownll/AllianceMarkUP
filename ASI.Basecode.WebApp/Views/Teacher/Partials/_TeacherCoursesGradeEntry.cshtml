 @model List<ASI.Basecode.Services.ServiceModels.TeacherClassScheduleViewModel>
 <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3">Class Schedule</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle grade-entry-table">
                                <thead>
                                    <tr>
                                        <th>EDP Code</th>
                                        <th>Course</th>
                                        <th>Program</th>
                                        <th>Type</th>
                                        <th>Units</th>
                                        <th>Schedule</th>
                                        <th>Room</th>
                                        <th>Section</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var course in Model)
                                        {
                                            <tr>
                                                <td>@course.EDPCode</td>
                                                <td>@course.Course</td>
                                                <td>@course.Program</td>
                                                <td>@course.Type</td>
                                                <td>@course.Units</td>
                                                <td>@course.DateTime</td>
                                                <td>@course.Room</td>
                                                <td>@course.Section</td>
                                                <td class="text-center">
                                                    <div class="d-inline-flex gap-2">
                                                        <!-- Edit -->
                                                        <button type="button"
                                                                class="icon-btn icon-edit"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="Edit"
                                                                onclick="showEditPanel('@course.EDPCode', '@course.Course', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </button>

                                                        <!-- Upload -->
                                                        <button type="button"
                                                                class="icon-btn icon-upload"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="Upload Excel Grades"
                                                                onclick="openExcelUploadModal('@course.EDPCode', '@course.Course', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-upload"></i>
                                                        </button>

                                                        <!-- To PDF -->
                                                        <button type="button"
                                                                class="icon-btn icon-pdf"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-title="To PDF"
                                                                onclick="printGrades('@course.EDPCode', '@course.Course', '@course.DateTime', @course.AssignedCourseId)">
                                                            <i class="bi bi-file-earmark-text"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center text-muted">No assigned courses found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>