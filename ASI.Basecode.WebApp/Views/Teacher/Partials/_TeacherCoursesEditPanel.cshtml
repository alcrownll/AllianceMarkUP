<!-- Edit Grades of Students -->
<div id="editPanel" class="col-12 mt-3 d-none">
    <div class="card shadow-sm teacher-edit-card">
        <!-- Fixed Header: Edit Grades -->
        <div class="card-header bg-white text-primary fw-bold fs-5 border-bottom-0 py-3">
            Edit Grades
        </div>

        <!-- Fixed Header: Course Info -->
        <div class="card-header bg-white d-flex justify-content-between align-items-center border-top-0 pt-0 pb-3">
            <div class="medium text-secondary">
                <strong>EDP Code:</strong> <span id="edpCodeText"></span> &nbsp; |
                <strong>Course:</strong> <span id="courseText"></span> &nbsp; |
                <strong>Program:</strong> <span id="programText"></span> &nbsp; |
                <strong>Schedule:</strong> <span id="scheduleText"></span>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary btn-sm px-3" title="Save" onclick="saveGrades()">Save</button>
                <button class="btn btn-danger btn-sm px-3" title="Cancel" onclick="hideEditPanel()">Cancel</button>
            </div>
        </div>

        <!-- Table with Fixed Header and Scrollable Body -->
        <div class="card-body p-0" style="height: 35vh; overflow-y: auto;">
            <table class="table table-bordered mb-0 edit-grade-table">
                <thead class="sticky-top" style="position: sticky; top: 0; z-index: 10;">
                    <tr>
                        <th>No.</th>
                        <th>ID Number</th>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Program/Year</th>
                        <th>Prelim</th>
                        <th>Midterm</th>
                        <th>Semi-final</th>
                        <th>Final</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody id="studentsTableBody">
                    <!-- Students will be loaded dynamically -->
                    <tr>
                        <td colspan="10" class="text-center text-muted">
                            Select a course and click "Edit" to load students
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
