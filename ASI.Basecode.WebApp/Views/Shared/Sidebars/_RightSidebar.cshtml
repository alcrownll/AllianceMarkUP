@model ASI.Basecode.Services.ServiceModels.RightSidebarViewModel

<div class="right-sidebar-content">

    <!-- Profile Section -->
    <div class="profile-card mb-3 p-3 border rounded d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            <div class="miniavatar d-grid place-items-center"
                 style="width:40px;height:40px; border-radius:8px;background:#e8eef9;overflow:hidden;">
                <i class="fa-solid fa-user text-primary"></i>
            </div>
            <div>
                <div class="fw-semibold">@Model.LastName</div>
                <div class="text-muted small">@Model.Role</div>
            </div>
        </div>
        <a href="@Url.Action("Index", "Notifications")" class="notif-icon text-decoration-none">
            <i class="fa-solid fa-bell"></i>
        </a>
    </div>

    <!-- Calendar -->
    <div class="calendar-widget mb-3">
        <input id="miniCalendar" type="text" aria-label="Mini calendar" />
    </div>

    <!-- Upcoming Events -->
    <div class="events-widget mb-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="mb-0">Upcoming Events</h6>
            @* Adjust the link per role/routes in your app *@
            <a href="@Url.Action("Calendar", "Student")" class="small text-decoration-none">View All</a>
        </div>

        @if (Model.UpcomingEvents != null && Model.UpcomingEvents.Any())
        {
            <div class="event-list">
                @foreach (var e in Model.UpcomingEvents)
                {
                    <div class="event-card p-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fa-solid fa-calendar-days text-primary"></i>
                                <span class="fw-semibold">@e.Title</span>
                            </div>
                            <span class="small text-muted">@e.When</span>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(e.Location))
                        {
                            <div class="mt-1 small text-muted">
                                <i class="fa-solid fa-location-dot me-1"></i>@e.Location
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-muted small">No upcoming events.</div>
        }
    </div>

    <!-- Notifications -->
    <div class="notif-widget mb-3">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="mb-0">Recent Activities</h6>
            <a href="@Url.Action("Index", "Notifications")" class="small text-decoration-none">View All</a>
        </div>

        @if (Model.Notifications != null && Model.Notifications.Any())
        {
            <div class="notif-list">
                @foreach (var n in Model.Notifications)
                {
                    var title = (n.Title ?? string.Empty).ToLowerInvariant();
                    var icon = title.Contains("grade") ? "fa-book-open"
                    : title.Contains("profile") ? "fa-user-pen"
                    : title.Contains("schedule") ? "fa-calendar-days"
                    : "fa-bell";

                    <div class="notif-card p-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fa-solid @icon text-primary"></i>
                                <span class="fw-semibold">@n.Title</span>
                            </div>
                            <span class="small text-muted">@n.When</span>
                        </div>
                        <div class="mt-1 d-flex justify-content-between align-items-center">
                            <a href="#" class="small fw-semibold text-primary">Details &gt;</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-muted small">No notifications.</div>
        }
    </div>

</div>
