<!-- _RightSidebar.cshtml -->
<div class="right-sidebar-content">

    <!-- Profile Section -->
    <div class="profile-card mb-3 p-3 border rounded d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            <div class="avatar d-grid place-items-center"
                 style="width:40px;height:40px;border-radius:8px;background:#e8eef9;overflow:hidden;">
                <i class="fa-solid fa-user text-primary"></i>
            </div>
            <div>
                <div class="text-muted small">
                    <!-- Static role or placeholder -->
                    User
                </div>
            </div>
        </div>

        <a href="@Url.Action("Index", "Notifications")" class="notif-icon text-decoration-none">
            <i class="fa-solid fa-bell"></i>
        </a>
    </div>

    <!-- Calendar -->
    <div class="calendar-widget">
        <!-- Keep the input VISIBLE; Flatpickr will insert the inline calendar here -->
        <input id="miniCalendar" type="text" aria-label="Mini calendar" />
    </div>

    <!-- Upcoming Activities -->
    <div class="upcoming-widget mb-3 p-3 border rounded">
        <h6>⏳ Upcoming Activities</h6>
        <ul>
            <li>Activity 1</li>
            <li>Activity 2</li>
        </ul>
    </div>

    <!-- Notifications -->
    <div class="notif-widget mb-3 p-3 border rounded">
        <h6>🔔 Notifications</h6>
        <ul>
            <li>Notif 1</li>
            <li>Notif 2</li>
        </ul>
    </div>

</div>
