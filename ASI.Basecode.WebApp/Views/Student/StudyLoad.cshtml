@section Styles {
    <style>
        /* Page background */
        body {
            background: #E5EFFB;
        }

        /* White container card */
        .sl-card {
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(16,24,40,.10);
            padding: 24px;
        }

        .sl-headline {
            font-weight: 800;
            color: #0f172a;
            font-size: 20px;
            margin-bottom: 2px;
        }

        .sl-subtitle {
            font-size: 12px;
            color: #6b7280;
        }

        /* Section: School term select */
        .sl-section-title {
            font-weight: 700;
            font-size: 13px;
            color: #0f172a;
            margin-bottom: 6px;
        }

        .sl-term-row {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .sl-select {
            display: inline-block;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 8px 10px;
            font-size: 13px;
            min-width: 280px;
            background: #fff;
        }

        .sl-iconbtn {
            border: 1px solid #e5e7eb;
            background: #fff;
            border-radius: 8px;
            height: 34px;
            width: 34px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        /* Info block */
        .sl-infogrid {
            display: grid;
            grid-template-columns: 120px 1fr;
            row-gap: 6px;
            column-gap: 12px;
            margin-top: 14px;
            margin-bottom: 10px;
            font-size: 13px;
        }

        .sl-label {
            color: #6b7280;
        }

        .sl-value {
            color: #0f172a;
            font-weight: 600;
        }

        /* Table */
        .sl-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 12px;
            background: #fff;
            overflow: hidden;
            border: 1px solid #e5e7eb;
            border-radius: 10px;
        }

            .sl-table thead th {
                background: #f8fafc;
                color: #0f172a;
                font-weight: 700;
                text-align: left;
                padding: 10px 12px;
                border-bottom: 1px solid #e5e7eb;
            }

            .sl-table tbody td {
                padding: 10px 12px;
                border-bottom: 1px solid #f1f5f9;
                color: #374151;
                vertical-align: middle;
            }

            .sl-table tbody tr:last-child td {
                border-bottom: 0;
            }

        /* Footer line */
        .sl-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 12px;
            color: #6b7280;
            border-top: 1px solid #e5e7eb;
            padding-top: 10px;
            margin-top: 8px;
        }

        .sl-btn-primary {
            background: #1d4ed8;
            color: #fff;
            border: 0;
            border-radius: 9999px;
            padding: 8px 14px;
            font-weight: 700;
            font-size: 12px;
            box-shadow: 0 6px 18px rgba(29,78,216,.25);
        }

        /* ✅ FIX: Razor escape with @@media */
        @@media (max-width: 768px) {
            .sl-topbar {
                flex-direction: column;
                align-items: flex-start;
            }

            .sl-search {
                width: 100%;
            }

            .sl-infogrid {
                grid-template-columns: 100px 1fr;
            }
        }
    </style>
}

